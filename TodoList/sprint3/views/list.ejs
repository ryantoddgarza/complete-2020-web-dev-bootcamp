<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>To Do List</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <main>
    <div class="box heading">
      <h1><%= listTitle.trim().replace(/^\w/, (c) => c.toUpperCase()) %></h1>
    </div>
    <div class="box">
      <% items.forEach(function (item) { %>
        <form action="/delete" method="post">
          <div class="item">
            <input
              type="checkbox"
              name="checkbox"
              value="<%=item._id%>"
              onChange="this.form.submit()"
            >
            <p><%= item.name %></p>
            <input type="hidden" name="listName" value="<%=listTitle%>">
          </div>
        </form>
      <% }) %>
      <form class="add-item" action="/" method="post">
        <input
          type="text"
          name="newItem"
          placeholder="New Item"
          autocomplete="off"
        >
        <button
          type="submit"
          name="list"
          value=<%=listTitle%>
        >
          +
        </button>
      </form>
    </div>
  </main>
  <%- include('footer') -%>
</body>
</html>
