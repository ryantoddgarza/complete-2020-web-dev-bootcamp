<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>To Do List</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <main>
    <div class="box heading">
      <h1><%= listTitle %></h1>
    </div>
    <div class="box">
      <% items.forEach(function (item) { %>
        <div class="item">
          <input type="checkbox">
          <p><%= item %></p>
        </div>
      <% }) %>
      <form action="/" method="post">
        <input
          type="text"
          name="newItem"
          placeholder="New Item"
          autocomplete="off"
        >
        <button
          type="submit"
          name="list"
          value=<%= listTitle%>
        >
          +
        </button>
      </form>
    </div>
  </main>
  <%- include('footer') -%>
</body>
</html>
